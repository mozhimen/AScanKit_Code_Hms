<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".scank.ScanKQRActivity">

        <FrameLayout
            android:id="@+id/scank_qr_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.mozhimen.uicorek.viewk.ViewKQRScan
            android:id="@+id/scank_qr_scan"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:viewKQRScan_animTime="2000"
            app:viewKQRScan_borderColor="@android:color/white"
            app:viewKQRScan_borderLineWidth="2dp"
            app:viewKQRScan_lineWidth="2dp"
            app:viewKQRScan_lineDrawable="@drawable/scank_qrscan_line"
            app:viewKQRScan_isScanLineReverse="false" />
    </FrameLayout>
</layout>