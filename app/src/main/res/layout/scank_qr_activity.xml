<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".scank.ScanKQRActivity">

        <FrameLayout
            android:id="@+id/scank_qr_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.mozhimen.xmlk.viewk.scan.ViewKScanQR
            android:id="@+id/scank_qr_scan"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:viewKScanQR_animTime="2000"
            app:viewKScanQR_borderColor="@color/white"
            app:viewKScanQR_borderLineWidth="2dp"
            app:viewKScanQR_isScanLineReverse="false"
            app:viewKScanQR_lineDrawable="@drawable/scank_qrscan_line"
            app:viewKScanQR_lineWidth="2dp" />
    </FrameLayout>
</layout>